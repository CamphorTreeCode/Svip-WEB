
<view class='header' wx:for="{{top}}" wx:for-item="item" >
    <view class='top'>
        <image src='{{item.image}}'></image>
        <view class='a'>
          <text class='a1'>超级VIP官方</text>
          <text class='c1'>Super VIP</text>
        </view>
        <view class='a2'><text>{{item.time}}</text></view>
    </view>

    <view class='bottom'>
      <view class='b_c'><text>{{item.name}}</text></view>
      <view class='b_b'><text>{{item.detail}}</text></view>
      <view class='b_a' bindtap='lujing'><text>查看详情</text></view>
       <view class='img_a'> 
       <!-- <view>{{item.url}}</view>  -->
        <view class='aaa'></view>
        <video src='{{vedio}}' ></video>
        <!-- <image class='sww' src='{{icon}}'></image>
        <image class='saa' src='{{item.url}}'></image> -->
       
       </view> 
      <view class='b_d'><image src='{{item.yan}}'></image><text>{{item.eys}}</text><image  class='b_aa' src='{{item.fabulous}}'></image><text>{{item.zan}}</text></view>
    </view>
</view>
