/* pages/allOrder/allOrder.wxss */
.fixed{ position: fixed; background: #fff; width: 100%; z-index: 999;}
page{ background: #fff;}
.data{ height: 100rpx; border-bottom: 1rpx solid #f2f2f2; border-top: 1rpx solid #f2f2f2; line-height: 100rpx; padding: 0 5%; color: #ff6269; }
.data .switchover{ float: right;}


/*列表属性*/
/*列表属性通用*/
.propertyList{ height: 100rpx; padding: 0 5%; line-height: 100rpx; border-bottom: 1rpx solid #f2f2f2; color: #333;}
.propertyList .property{ width: 30%; float: left; }
/*列表属性每个特殊样式*/
.propertyList .property.first{ width:30%;}
.propertyList .property.second{ width:40%; text-align: center;}
.propertyList .property.third{ width:30%; text-align: right; padding-right: 0.8rem; box-sizing: border-box;}
.propertyList .property image{ width: 40rpx; height: 40rpx;  vertical-align: middle; margin: 0 10rpx 10rpx 0;}



/*列表内容*/
/*列表内容通用*/
.valueList{ height: 200rpx; border-bottom: 1rpx solid #f2f2f2; color: #333; overflow: hidden; } 
.valueList .value{ float: left; width: 33.33%; text-align:center;  box-sizing: border-box; padding: 0 0.5rem; }
/*列表每个特殊*/
.valueList .value.first{ word-break:break-all;}
.valueList .value.first view{ width:5.5rem; margin: 0 auto; padding: 40rpx 0; line-height: 60rpx; color: #999;}
.valueList .value.second{ padding: 20rpx 0; line-height: 60rpx;display: -webkit-box;word-break: break-all;text-overflow: ellipsis;
overflow: hidden;-webkit-box-orient: vertical;-webkit-line-clamp:3;}
.valueList .value.third{ line-height: 200rpx; color: #999;}
.valueList .value.third text{ color:#ff6269;}

/*回到顶部按钮*/
.goTop{width: 100rpx; height: 100rpx; position: fixed; bottom: 5%; right: 3%; border-radius:1000rpx;}
.goTop image{ width: 100%; height: 100%;}


/*地址插件样式*/
.infoText{
    margin-top: 20rpx;
    text-align: center;
    width: 100%;
    justify-content: center; 
}

picker-view{
  background-color: white;
  padding: 0;
  width: 100%; 
  height: 380rpx;
  bottom: 0;
  position: fixed;
}

picker-view-column view{
  vertical-align:middle; 
  font-size: 28rpx;
  line-height: 28rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

